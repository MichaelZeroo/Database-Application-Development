<Window x:Class="VirtualShoppingMall.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualShoppingMall"
        mc:Ignorable="d"
        Title="LoginForm" Height="450" Width="800">
    <Grid>
        <Label Content="Enter User Name" FontSize="25"
               HorizontalAlignment="Left" Margin="108,71,0,0" VerticalAlignment="Top" Height="47" Width="222"/>
        <TextBox Name="txtUN"
            HorizontalAlignment="Left" Height="47" Margin="375,71,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="334"/>
        <Label Content="Enter Password" FontSize="25"
            HorizontalAlignment="Left" Margin="108,164,0,0" VerticalAlignment="Top" Height="47" Width="222"/>
        <TextBox Name="txtPwd"
            HorizontalAlignment="Left" Height="47" Margin="375,164,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="334"/>
        <Button Name="btnLogin"
            Content="Login"  FontSize="25"
                HorizontalAlignment="Left" Margin="285,264,0,0" VerticalAlignment="Top" Width="196" Height="60" Click="btnLogin_Click"/>

    </Grid>
</Window>
