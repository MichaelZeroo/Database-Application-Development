<Window x:Class="Test.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="frmLogin" Height="450" Width="800">
    <Grid>
        <Label Content="UserName" FontSize="20" HorizontalAlignment="Left" Margin="69,61,0,0" VerticalAlignment="Top" Height="38" Width="154"/>
        <TextBox Name="unTextBox" HorizontalAlignment="Left" Height="38" Margin="239,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Label Content="Password" FontSize="20" HorizontalAlignment="Left" Margin="69,104,0,0" VerticalAlignment="Top" Height="38" Width="154"/>
        <TextBox Name="pwdTextBox" HorizontalAlignment="Left" Height="38" Margin="239,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="275,203,0,0" VerticalAlignment="Top" Width="119" Height="46" Click="btnLogin_Click"/>
        <Button Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="83,203,0,0" VerticalAlignment="Top" Width="119" Height="46" Click="btnExit_Click"/>

    </Grid>
</Window>
